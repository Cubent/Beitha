{
  "name": "Beitha",
  "version": "0.2.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Beitha",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/quickPrompt.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "options_page": "options.html",
  "permissions": ["debugger", "tabs", "sidePanel", "storage", "activeTab", "commands", "contextMenus"],
  "host_permissions": ["<all_urls>"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+B",
        "mac": "Alt+Shift+B"
      },
      "description": "Open the Beitha side panel",
      "global": false
    }
  }
}
